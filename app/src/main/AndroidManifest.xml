<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.customview.android.learn_the_custom_control">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".view.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".view.FirstActivity"/>
        <activity android:name=".view.SecondActivity"/>
        <activity android:name=".view.ThirdActivity"/>
        <activity android:name=".view.FourthActivity"/>
        <activity android:name=".view.FifthActivity"/>
        <activity android:name=".view.SixthActivity"/>
        <activity android:name=".view.SeventhActivity"/>
        <activity android:name=".view.EighthActivity"/>
        <activity android:name=".view.NinthActivity"/>
        <activity android:name=".view.TenthActivity"/>
    </application>

</manifest>