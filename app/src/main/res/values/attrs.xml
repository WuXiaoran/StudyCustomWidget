<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--定义属性-->
    <attr name="titleText" format="string"></attr>
    <attr name="titleTextColor" format="color"></attr>
    <attr name="titleTextSize" format="dimension"></attr>
    <attr name="image" format="reference"/>
    <attr name="imageScaleType">
        <enum name="fillXY" value="0"/>
        <enum name="center" value="1"/>
    </attr>
    <attr name="firstColor" format="color"/>
    <attr name="secondColor" format="color"/>
    <attr name="circleWidth" format="dimension"/>
    <attr name="speed" format="integer"/>
    <attr name="dotCount" format="integer"/>
    <attr name="splitSize" format="integer"/>
    <attr name="bg" format="reference"/>
    <attr name="borderRadius" format="dimension"/>
    <attr name="type">
        <enum name="circle" value="0"/>
        <enum name="round" value="1"/>
    </attr>
    <attr name="src" format="reference"/>
    <attr name="color_no_finger_inner_circle" format="color"/>
    <attr name="color_no_finger_outer_circle" format="color"/>
    <attr name="color_finger_on" format="color"/>
    <attr name="color_finger_up" format="color"/>
    <attr name="count" format="integer"/>
    <attr name="tryTimes" format="integer"/>
    <attr name="position">
        <enum name="left_top" value="0"/>
        <enum name="right_top" value="1"/>
        <enum name="right_bottom" value="2"/>
        <enum name="left_bottom" value="3"/>
    </attr>
    <attr name="radius" format="dimension"></attr>



    <!--所需widget的属性-->
    <declare-styleable name="FirstView">
        <attr name="titleText" />
        <attr name="titleTextColor" />
        <attr name="titleTextSize" />
    </declare-styleable>
    <declare-styleable name="SenondView">
        <attr name="titleText" />
        <attr name="titleTextColor" />
        <attr name="titleTextSize" />
        <attr name="image" />
        <attr name="imageScaleType" />
    </declare-styleable>
    <declare-styleable name="ThirdView">
        <attr name="firstColor"/>
        <attr name="secondColor"/>
        <attr name="circleWidth"/>
        <attr name="speed"/>
    </declare-styleable>
    <declare-styleable name="FourthView">
        <attr name="firstColor"/>
        <attr name="secondColor"/>
        <attr name="circleWidth"/>
        <attr name="dotCount"/>
        <attr name="splitSize"/>
        <attr name="bg"/>
    </declare-styleable>
    <declare-styleable name="FifthView">
        <attr name="borderRadius"/>
        <attr name="type"/>
        <attr name="src"/>
    </declare-styleable>
    <declare-styleable name="SixthView">
        <attr name="color_no_finger_inner_circle"/>
        <attr name="color_no_finger_outer_circle"/>
        <attr name="color_finger_on"/>
        <attr name="color_finger_up"/>
        <attr name="count"/>
        <attr name="tryTimes"/>
    </declare-styleable>
    <declare-styleable name="SeventhView">
        <attr name="position"/>
        <attr name="radius"/>
    </declare-styleable>

</resources>